{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":disableRateLimiting",
    ":timezone(Europe/Berlin)",
    ":enablePreCommit"
  ],
  "forkProcessing": "enabled",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "ignorePaths": [],
  "separateMajorMinor": false,
  "packageRules": [
    {
      "groupName": "karpenter",
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "karpenter-crd",
        "karpenter"
      ]
    }
  ]
}
